{
    "general": {
        "seed": 42,
        "device": "cuda:0",
        "output_dir": "./results/",
        "log_dir": "./results/logs/",
        "model_save_dir": "./results/models/"
    },
    "data": {
        "train_data_path": "./data/processed/train_data.npz",
        "test_data_path": "./data/processed/test_data.npz",
        "batch_size": 64,
        "shuffle": true,
        "normalize": true
    },
    "model": {
        "pinn": {
            "in_dim": 3,
            "hidden_dim": 256,
            "out_dim": 2,
            "num_layer": 4
        },
        "pinnsformer": {
            "in_dim": 3,
            "hidden_dim": 256,
            "out_dim": 2,
            "num_layer": 4,
            "attention_heads": 8
        },
        "lstm_pinnsformer": {
            "in_dim": 3,
            "hidden_dim": 256,
            "out_dim": 2,
            "num_layer": 4,
            "lstm_dim": 128,
            "lstm_layers": 2,
            "attention_heads": 8
        },
        "ipflstm": {
            "in_dim": 3,
            "hidden_dim": 256,
            "out_dim": 2,
            "num_layer": 4,
            "lstm_dim": 128,
            "lstm_layers": 2,
            "attention_heads": 8
        }
    },
    "training": {
        "epochs": 1000,
        "optimizer": "Adam",
        "learning_rate": 0.001,
        "loss_weights": {
            "data_loss": 1.0,
            "pde_loss": 1.0
        },
        "save_model_frequency": 100,
        "log_frequency": 10
    },
    "experiment": {
        "comparative_study": true,
        "ablation_study": true,
        "time_window_lengths": [
            3,
            5,
            7,
            10
        ],
        "models_to_compare": [
            "pinn",
            "pinnsformer",
            "lstm_pinnsformer",
            "ipflstm"
        ]
    }
}